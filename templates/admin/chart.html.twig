{% extends 'base.html.twig' %}
{% block content %}
    {% macro showValue(value) %}
        {% if value is iterable %}
            <ul class="list-group">
                {% for v in value %}
                    <li class="list-group-item">
                        {{ _self.showValue(v) }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            {{ value }}
        {% endif %}
    {% endmacro %}

    <!--Section: Sales Performance KPIs-->
    <section class="mb-4">
        <div class="card">
            <div class="card-header text-center py-3">
                <h5 class="mb-0 text-center">
                    <strong>{{ orgData.ip }}</strong>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover text-nowrap" id="datatable">
                        <thead>
                        <tr>

                            <th scope="col">IP</th>
                            <th scope="col">Date</th>
                            <th scope="col">Url</th>
                            <th scope="col">Conferences</th>
                            <th scope="col">Users</th>
                            <th scope="col">Login Users</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for d in data %}
                            <tr>

                                <td>{{ d.ip }}</td>
                                <td>{{ d.createdAt|date('d.m.Y H:i') }}</td>
                                <td>{% if d.dataAsArray['urls'][0] is defined %}{{ d.dataAsArray['urls'][0] }}{% endif %}</td>
                                <td>{{ d.dataAsArray['rooms'] }}</td>
                                <td>{{ d.dataAsArray['users'] }} </td>
                                <td>{{ d.dataAsArray['kcUser'] }}</td>
                                <td>


                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-link btn-sm btn-rounded"
                                            data-mdb-toggle="modal" data-mdb-target="#modeModal_{{ d.id }}">
                                        More
                                    </button>
                                    <a href="{{ path('app_chart',{'id':d.id}) }}" class="btn btn-link btn-sm btn-rounded">
                                         <i class="fas fa-chart-line"></i>
                                    </a>

                                    <!-- Modal -->
                                    <div class="modal top fade" id="modeModal_{{ d.id }}" tabindex="-1"
                                         aria-labelledby="modeModal_{{ d.id }}" aria-hidden="true"
                                         data-mdb-backdrop="false" data-mdb-keyboard="true">
                                        <div class="modal-dialog  ">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">More (#{{ d.id }})</h5>
                                                    <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                                            aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            IP: {{ d.ip }}
                                                        </li>
                                                        <li class="list-group-item">
                                                            Created At: {{ d.createdAt|date('d.m.Y H:i') }}
                                                        </li>
                                                        <li class="list-group-item" style="white-space: normal">
                                                            Data:
                                                            <ul class="list-group">
                                                                {% for key,value in d.dataAsArray %}
                                                                    <li class="list-group-item">
                                                                        {{ key }}:
                                                                        {{ _self.showValue(value) }}
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>

                                                        </li>
                                                    </ul>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-mdb-dismiss="modal">
                                                        Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <section class="mb-4">
        <div class="card">
            <div class="card-header py-3">
                <h5 class="mb-0 text-center"><strong>History</strong></h5>
            </div>
            <div class="card-body">
                <canvas class="my-4 w-100" id="chart" height="380"></canvas>
            </div>
        </div>
    </section>


    <!--Section: Sales Performance KPIs-->


{% endblock %}
{% block script %}
<script>
    $(document).ready( function () {
        $('#datatable').DataTable();
    } );

    var ctx = document.getElementById("chart");

    var myChart = new Chart(ctx, {
        type: "line",
        data: {
            labels: [
                {% for d in data %}
                "{{ d.createdAt|date('d.m.Y') }}",
                {% endfor %}
            ],
            datasets: [
                {
                    label:'Conferences',
                    data: [
                        {% for d in data %}
                        {{ d.dataAsArray['rooms']}},
                        {% endfor %}
                       ],
                    lineTension: 0,
                    backgroundColor: "transparent",
                    borderColor: "#007bff",
                    borderWidth: 4,
                    pointBackgroundColor: "#007bff",
                },
                {
                    label:'Users',
                    data: [
                        {% for d in data %}
                        {{ d.dataAsArray['users']}},
                        {% endfor %}
                    ],
                    lineTension: 0,
                    backgroundColor: "transparent",
                    borderColor: "red",
                    borderWidth: 4,
                    pointBackgroundColor: "red",
                },
                {
                    label:'Login Users',
                    data: [
                        {% for d in data %}
                        {{ d.dataAsArray['kcUser']}},
                        {% endfor %}
                    ],
                    lineTension: 0,
                    backgroundColor: "transparent",
                    borderColor: "green",
                    borderWidth: 4,
                    pointBackgroundColor: "green",
                },
            ],
        },
        options: {
            scales: {
                yAxes: [
                    {
                        ticks: {
                            beginAtZero: true,
                        },
                    },
                ],
            },
            legend: {
                display: true,
            },
        },
    });

</script>
{% endblock %}
